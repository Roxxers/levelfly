<div class="row show_page">
  <div class="col-md-1">
  </div>
  <div class="col-md-10">
    <div class="row">
      <div id= "Stripes">
    	</div>
    </div>
    <div id="Shape8"></div>
    <div id="VectorSmartObject_0"></div>
    <div class='row' style="height:210px;">
      <div class="col-sm-4">
        <img src="<%= @game.image.url%>" height='156' width='156' class="Layer30"> 
      </div>
      <div class="col-sm-8">
        <div style="margin: 170px 0px 0px 14px;">
          <h2 class="game_name"><%= @game.name%></h2>
        </div>
      </div>
    </div>
    <div class="row">      
      <div class="col-sm-4">
        <a href="<%=@download_link.present? ? @download_link : 'javascript:void(0)'%>">
          <img src="../images/gc-download.png" class='download-btn'>
        </a>
      </div>
      <div class="col-sm-8">
        <div class="game_detail">
          <!-- <div>
            <h4 class="text-info"><b> Description</b></h4>
          </div>   -->
          <h4>
            <p class="text-info game_desc"><%= @game.descr%>
            </br />
            <% if @guide_link.present? %>Click <a href="<%=h @guide_link %>" alt="guide" target="_window">here</a> for guides.<% end %>
            </p>
          </h4>
        </div>  
      </div>
    </div>
    <div class="row">
      <div id="Stripes_0">
        <div class="screenshot">
          <b> <h4>Screenshots</h4></b>
        </div>
        <div id="thumbs">
          <% @game.screen_shots.each do |ss|%>
            <span class="imgg">              
              <%= image_tag ss.image.url, class: 'imaa'%>
            </span>
          <% end unless !@game.screen_shots.present?%>
          <% (5 - @game.screen_shots.count).times do %>
            <span class="imgg"><img src="../images/Layer30.png" alt="" class="imaa"/></span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div id="section_two">
        <div class="col-sm-4">
          <img src="../images/Shape46_0.png" class="Shape46_0"> 
          <img src="../images/VectorSmartObject.png" class="VectorSmartObject">
          <img src="../images/Achievements.png" class="Achievements">
        </div>
        <div class="col-sm-8 learning-objs">
          <h4>Learning Objectives</h4>
          <ul>
            <% @outcomes.each do |outcome|%>
              <li class="learning_text"><%= outcome.name %></li>
            <% end %>
          </ul>  
        </div>
      </div>
    </div>
    <div class="row">
      <div id="Rectangle6">
        <div>
          <img src="../images/LeaderBoard.png" class="LeaderBoard">
        </div>
        <div>
          <img src="../images/Polygon2.png" class="Polygon2">
        </div>

        <div class="carousel slide" id="myCarousel">
          <div class="carousel-inner">
            <% main_index = 1%>            
            <% @profiles.each_slice(3).with_index do |profile_objects, index| %>              
              <div class="item <%= index==0 ? 'active' : ''%>">
                <% profile_objects.each_with_index do |profile, i| %>
                  <% main_index = main_index + i %>
                  <% rank = i==2 ? main_index-1 : main_index%>
                  <div class="col-xs-3">
                    <div class="image_slider">&nbsp;<span class="slider_image text-num"><%= rank %></span>&nbsp;&nbsp;
                      <span class="slider_image">
                        <img src="<%= is_profile_accessible?(profile) ? profile.image_file_name : Profile.default_avatar_image %>" class="img-responsive" height='40' width='40'>
                      </span>
                      &nbsp;&nbsp;<span class="slider_image prof-name" style='color:#fff;'><%= is_profile_accessible?(profile) ? profile.full_name : 'Private'%></span>
                      <span class="slider_image text-info" style='color:#000;'><%= profile.xp%></span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>            

          </div>
          <a class="left carousel-control" href="#myCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
        </div>
      </div>
    </div>    
  </div> 
</div>
<style type="text/css">
  .download-btn{
    margin-left: 23px; border-radius: 9px;
  }
</style>>