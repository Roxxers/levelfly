<div class="LB_tableheader">
  <div class="LBT_rank">Rank</div>
  <div class="LBT_ava"> &nbsp;</div>
  <div class="LBT_name">&nbsp;</div>
  <div class="LBT_level">SCORE</div>
  <div class="LBT_xp">XP</div>
  <div class="LBT_badges">BADGES</div>
</div>
<% if @profiles.present? %>
  <% @profiles.each do |p| %> 
    <div class="LB_tablecontent <%= cycle("even", "odd") %>">
      <div class="LBT_rank"><%= p.rank %></div>
      <div class="LBT_ava">
        <div class="avatarWbdr"><img src="<%= is_profile_accessible?(p) ? p.image_file_name : profile_icon_default%>" class="profile" profile_id="<%= p.id %>" /></div>
      </div>
      <div class="LBT_name"> <span class="name_txt"><%= is_profile_accessible?(p) ? p.full_name : 'Private'%> </span><br />
      <span class="course_txt"><%= is_profile_accessible?(p) ? p.major_school : ''%></span> </div>
      <div class="LBT_level"><%= is_profile_accessible?(p) ? @game.get_score(p.id) : 'Private'%></div>
      <div class="LBT_xp"><%= is_profile_accessible?(p) ? p.xp : 'Private' %></div>
      <div class="LBT_badges"><%= is_profile_accessible?(p) ?  badge_count_by_game(session[:game_id], p.id) : 'Private'%></div>     
    </div>
  <% end %>
<% else %>
  <div class="LB_tablecontent even">
    <div class="LBT_name">No Players Yet</div>
  </div>
<% end %>
