<div class="msg_big_box" id="request_box_<%=friend_request.id%>">
  <div class="avatar_white_bdr">
    <img src="https://s3.amazonaws.com/<%=friend_request.profile.school.vaults[0].folder%>/avatar_thumb/avatar_<%=friend_request.profile.id%>.jpg" id="<%=friend_request.profile.id%>" class="profile"/>
  </div>
  <div class="msg_big_box_arrow"><img src="images/blue_arrow.png" /></div>
  <div class="msg_box_fullwidth">
    <div class="msg_box_txt blue_bg_msg_txt">
      <h3 class="name"><%=friend_request.profile.full_name%></h3>
      <p><%=friend_request.content%></p>
      <div class="msg_bottom_links">
        <div class="time"><%= time_ago_in_words(friend_request.created_at) %> ago</div>
        <div class="like_cmt">
          <span>
            <a href="javascript:void(0)" class="blue_bt19px friend-request" rel="add" id="<%=friend_request.id%>">Add</a>
          </span>
          <span>
            <a href="javascript:void(0)" class="blue_bt19px friend-request" rel="dntadd" id="<%=friend_request.id%>">Don't add</a>
          </span>
        </div>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>

