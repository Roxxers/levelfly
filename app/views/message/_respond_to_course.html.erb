<div class="msg_big_box" id="request_box_<%=respond_course.id%>">
  <div class="avatar_white_bdr">
    <img src="<%=respond_course.profile.image_file_name%>" profile_id="<%=respond_course.profile.id%>" class="profile"/>
  </div>
  <div class="msg_box_fullwidth">
    <div class="positn_rtlv"><div class="msg_big_box_arrow"><img src="/images//blue_arrow.png" width="15px" height="21px" /></div></div>
    <div class="msg_box_txt blue_bg_msg_txt">
      <h3 class="name"><%=respond_course.profile.full_name%></h3>
      <p><%=respond_course.content%></p>
      <div class="msg_bottom_links">
        <div class="time"><%= time_ago_in_words(respond_course.created_at) %> ago</div>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>