      var dataString = {
        profile_id:profile_id,
        parent_type:"Profile"
      };
      $.ajax({
        type: "POST",
        url: "/message/friend_messages",
        dataType: 'json',
        data: dataString,
        error: function(){alert("ERROR!!")},
        success: function(data) {
          if (data) {
            $("#container").html(data);
          }
          showSpinner(false);
        }
      });
    }
