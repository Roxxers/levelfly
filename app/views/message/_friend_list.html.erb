<!--friend box-->
<div class="friend_box" id="friend_box_<%=friend.id%>">
  <div class="avatar_green_bdr">
    <img src="<%=friend.image_file_name%>" profile_id="<%=friend.id%>" class="profile"/>
  </div>
  <div class="txtboxfullwidth">
    <div class="txt">
      <p><b><%=friend.full_name%></b></p>
      <p><%=h "#{friend.major.name}, " if friend.major%><%=h friend.school.code%></p>
       <%created_at=last_message(friend.id, user_session[:profile_id])%>
	   <%viewed=messages_viewed(friend.id, user_session[:profile_id])%>
      <p style="font-weight: bold;" class="time"><%if !created_at.nil?%><span class="words"><%=time_ago_in_words(created_at)%> ago</span><span class="dates"><%=gdt(created_at)%></span><%end%></p>
      <div class="spacebar10px"></div>
      <div align="right" id="frnd_root_btn">
      <a href="javascript:void(0)" class="blue_bt19px menu_btn" rel="/message/friends_only/<%=friend.id%>">View Private Messages</a>
	  <% if !viewed and !viewed.nil? %>
	  <img src="/images/alert.png" style="margin-left:-16px"/>
	  <% end %>
      </div>
      
    </div>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
</div>
