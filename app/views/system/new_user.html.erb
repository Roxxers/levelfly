<div class="Main_Wp">
<div class="Header_Wp">
 <div class="Logo_Wp">
  <!-- <img src="images/icon_dropbox.png"/> -->
</div><!--Logo_Wp-->
  </div><!--Header_Wp-->
  <div class="Content_Wp">
    <div class="Panel_Left">
     <img src="/images/login_splash.png" class="Panel_Left_img"/>
      <div class="left_content_box">	
        <h1 style="color:white;">Game your learning.</h1>
          <div class="clear"></div>
	        <span class="blue">Version <%= APP_VERSION %></span>
           <div class="clear"></div>
            <div class="Divider_15"></div>
        </div><!--left_content_box-->
      </div><!--Panel_Left-->
     <%= form_for(@user, :as => @user, :url => {:controller=>:system, :action=>:edit, :id => @user.id}, :html => {:name=>"events_form",:multipart => true, :method=>"post", :class=>"form-horizontal"}) do |f| %>
      <%#= devise_error_messages! %>
      <div class="Panel_Rirght">
				<div>
					<img src="/images/levelfly_tag.png" alt="Levelfly" width="392" height="171"><br>
					<h3 style="color:white;margin-top:0px;"><%= session[:slug].blank? ? "" : school.name %></h3></div>
				<div class="Divider_90"></div>
      	<div class="Sign_in_wp">
          <div class="sign_in_box"><h1>Register </h1></div><!--sign_in-box-->
          <div class="creat_text">
            <span class="blue">
            </span></div>
          </div>
          <div class="clear"></div>
          <div class="Divider_15"></div>
          <div class="clear"></div>
           <div class="text_box_wp">
               <%= f.text_field :full_name, :class=>"txt_box",:style=>"width:378px;" , :placeholder=>"Full Name", :required => "required", :title => "You must enter a name."%>
          </div><!--text_box_wp-->
           <div class="Divider_15"></div>
          <div class="clear"></div>
          <div class="text_box_wp">
               <%= f.email_field :email, :value=>@user.email, :disabled=>true, :class=>"txt_box",:style=>"width:378px;" %>
          </div><!--text_box_wp-->
          <div class="Divider_15"></div>
          <div class="clear"></div>
          <div class="text_box_wp">
               <%= f.password_field :password, :class=>"txt_box",:style=>"width:378px;", :placeholder=>"Password", :pattern => ".{6,}", :required => "required", :title => "6 characters minimum"%>
          </div><!--text_box_wp-->
          <div class="Divider_15"></div>
          <div class="clear"></div>
          <div class="remember_box_wp">
               <div class="sign_in_button_wp">
                    <%= f.submit "Register", :class=>"big_bluebtn", :onclick=>"return validateForm()";%>
                  </div><!--sign_in_button-->
                  <div class="forgot_your_pass_wp">
                    <%#= render :partial => "devise/shared/links" %>
                  </div><!--forgot_your_pass_wp-->
          </div><!--remember_box_wp-->
           
           <div class="error_message" style="margin-top:15px;"><h2 id="error_div"></h2></div>

          <%= f.hidden_field :message_id ,:value=> @message %>	
      </div><!--Panel_Right-->
     <% end %>
  </div><!--Content_Wp-->
  <div class="clear"></div>
</div><!--Main_Wp-->


<script type="text/javascript">
  jQuery.noConflict();

  var user_full_name = document.getElementById('user_full_name'),
      user_password = document.getElementById('user_password'),
      user_password_confirmation = document.getElementById('user_password_confirmation');

  function validateForm() {
    if (user_password_confirmation.value && user_password.value != user_password_confirmation.value) {
      user_password_confirmation.setCustomValidity('The two passwords must match.');
    } else {
      user_password_confirmation.setCustomValidity('');
    }
    return true;
  }
</script>
