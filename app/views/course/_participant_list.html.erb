<ul class="people_node">
<% if !peoples.empty? %>
  <% if mode == "list" %>
    <% peoples.each do |p| %>
      <li class="blackboard_list" id="<%=p.id%>" style="width:88%; height:50px;">
        <div class="avatar_white_bdrC2">
          <img src='<%=p.image_file_name%>'>
        </div>
        <div class="people_name"><%if p.full_name == nil %><%=p.user.email%><%else%><%=p.full_name%><%end%><br />
          <%if @courseMaster and !@courseMaster.nil?%>
            <div style="font-size:10px; font-weight:normal;">
              <%= p.user.email %>
            </div>
          <%end%>
          <span style="font-size:10px; font-weight:normal;">
            <%= p.participants[0].profile_type == "P" ? "Pending" : "Member" %>
          </span>
        </div>
        
        <a href="javascript:void(0)" class="people_delete blue_bt19px" rel="<%=p.id%>" style="float:right;" >Remove</a>

        <div class="clear"></div>
      </li>
      <div class="clear"></div>
    <% end %>
  <% end %>
<% end %>
</ul>
