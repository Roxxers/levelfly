<div class="comment_container">
  <div class="comment_content">
    <div id="content">
      <%=comment.content%>
    </div>
    <div id="info">
      <div id="time">
        <%= time_ago_in_words(comment.created_at) %> ago
      </div>
      <div id="links">
        <a class="sbmt_msg">Like</a>
      </div>
    </div>
  </div>
  <div class="avatar_thumb_comment">
    <img src="https://s3.amazonaws.com/<%=comment.profile.school.vaults[0].folder%>/avatar_thumb/avatar_<%=comment.profile.id%>.jpg" />
  </div>
</div>