<div class="file_content course_tab_content" id="filename_<%= a.id %>">
  <div class="course_left"></div>
  <div class="course_page_msg_box">
    <div class="msg_big_boxC2">
      <div class="msg_box_fullwidth2">
        <div class="msg_box_txt blue_bg_msg_txt2 coursemsg_bgc2" >
          <div class="staronavatar">
          	<%if (@course and @course.owner.id == user_session[:profile_id]) %>
          	  <img src="/images/<%if a.starred == true %>star_up<%else%>star_down<%end%>.png" width="36" height="37" rel="<%=a.id%>" class="file_pri_toggle file_pri_toggle_img" />
			<% elsif a.starred %>
			  <img src="/images/star_up.png" width="36" height="37" />
			<% end %>
		  </div>
          <div class="avatar_white_bdrC2">
             <img src="<%=a.owner.image_file_name%>" class="profile" profile_id="<%=a.owner_id%>" />
          </div>
          <div class="titleTextheading">
            <h4 class="name"><%=a.resource_file_name%></h4>
            <p>
              Uploaded by <%=h a.owner.full_name%><br />
            </p>
          </div>
          <div class="titleTextRight"> <%= show_kilo_byte(a.resource_file_size) %>KB</div>
          <div class="titleTextRightC2"><%= change_date_format(a.updated_at) %></div>
          <div class="clear"></div>
          <div id="files_hover" class="msg_bottom_linksC2" style="display:none;">
              <div class="like_cmt"> 
			  <% if (@course and @course.owner.id == user_session[:profile_id]) %>
                <a href="javascript:void(0)" class="file_pri_toggle file_pri_toggle_btn blue_bt19px" rel="<%=a.id%>"><%if a.starred == true %>Un-Star<%else%>Star<%end%></a>
              <% end %>
				<a href="javascript:void(0)" class="files_download blue_bt19px" rev="download" rel="<%= a.resource.url %>">Download</a> 
                <a href="javascript:void(0)" class="blue_bt19px files_download" rev="share" rel="<%= a.resource.url %>">Share</a> 
                <% if ( a.owner_id == @profile.id or ( @course and @course.owner.id == user_session[:profile_id]) ) %>
                  <a href="javascript:void(0)" class="files_del blue_bt19px" rel="<%= a.id %>">Remove</a>
                <% end %>
              </div>
            </div>
            <div class="clear"></div>
          </div>
        </div>
      </div>
    </div>
</div>

<script type="text/javascript">
$(".file_content").hover(
  function () {
    id = $(this).attr("id");
    $("#"+id+" #files_hover").show();
  }, 
  function () {
    id = $(this).attr("id");
    $("#"+id+" #files_hover").hide();
  }
);
$("#cancel_btn").click(function(){
    $("#file_download").hide();
 });
 
</script>