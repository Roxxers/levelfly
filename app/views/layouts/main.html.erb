</head>
<body>
<div class="body_bg">
  <div id="wrapper" class="wrapper">
    <div class="header">
      <div class="positn_rtlv">
        <div class="level_00">
          <div class="head">Level</div>
          <div class="count"><%=h "%02d" % user_session[:profile_level].to_s.to_i %></div>
        </div>
      </div>
      <div class="avatar_box">
        <div class="avatar">
          <a href="javascript:void(0);" rel="/profile/user_profile" class="page_switcher"><img id="my_avatar_image" src="<%=user_session[:profile_image]%>" /></a>
        </div>
        <div class="avatar_detail">
          <div id="tool_bar_full_name" class="full_name">
            <% if user_session[:profile_name].blank? %>
            <a href="javascript:void(0);" rel="/profile/user_profile" class="page_switcher full_name">EDIT MY PROFILE</a>
            <% else %>
            <%=user_session[:profile_name]%>
            <% end %>
          </div>
          
          <h2><%=h user_session[:profile_major] + ", " unless user_session[:profile_major].blank? %><%=h user_session[:profile_school] %></h2>
        </div>
        <div class="clear"></div>
      </div>
      <div class="header_mid_box">
        <div id="alert" class="alert"></div>
      </div>
      <div class="header_search_box">
        <div class="setting_box"><a href="/users/sign_out" data-method="delete" rel="nofollow"><img src="/images//setting_icon.png" /></a></div>
        <div class="search_bg">
          <form id="frm_search">
            <div id="clear_search" class="menu_btn hide" style="right:150px;margin-top:0px;">
              X
            </div>
            <input name="search_text" id="search_input" type="text" value="Find Course" />
          </form>
          <div id="search_options" class="hide">
            <li rel="/course/">
              Find Course
            </li>
            <li rel="/task/">
              Find Task
            </li>
            <li rel="/message/">
              Find Message
            </li>
            <li rel="/group/">
              Find Group
            </li>
            <li rel="/friend/">
              Find Friend
            </li>
          </div>
        </div>
        <div class="search_icon">
          <a href="javascript:void(0)" onClick="$('#search_options').toggle();">
            <img src="/images/search_icon.png" />
          </a>
        </div>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div><!--header -->
    <div class="fullheight">
      <div class="left_nav_box">
        <div class="nav_box" id="root_level">
          <div class="leftnav_cover_emtysps">
            <!--<a href="#" class="uparrow"></a>-->
          </div>
          <!--icon-->
          <div class="space_btwn_icon"></div>
          <div class="icon_box"><span class="msg_count" style="display:none;">1</span><a href="javascript:void(0);" id="msg" rel="/message/" class="icon_msg menu_btn">messages</a> </div>
          <div class="space_btwn_icon"></div>
          <!--icon-->
          <div class="icon_box"><a href="javascript:void(0);" id="courses" rel="/course/" class="icon_courses_active menu_btn">courses</a> </div>
          <div class="space_btwn_icon"></div>
          <!--icon-->
          <div class="icon_box"> <a href="javascript:void(0);" id="tasks" rel1="/system/alert/" rel="/task/" class="icon_tasks menu_btn">tasks</a> </div>
          <div class="space_btwn_icon"></div>
          <!--icon-->
          <div class="icon_box"> <a href="javascript:void(0);" id="networks" rel="/system/alert/" class="icon_networks menu_btn">Groups</a> </div>
          <div class="space_btwn_icon"></div>
          <!--icon-->
          <!-- <div class="icon_box"> <a href="javascript:void(0);" id="stats" rel="/system/alert/" class="icon_stats menu_btn">Leader board</a> </div>
          <div class="space_btwn_icon"></div> -->
          <div class="icon_box"> <a href="javascript:void(0);" id="grade" rel="/grade_book/" class="icon_grade menu_btn">Grade book</a> </div>
          <div class="space_btwn_icon"></div>
          <a href="javascript:void(0);" id="wardrobe" rel="/wardrobe/" class="menu_btn downarrow"></a>
        </div>
      </div>
      
      <div class="middle_main_div">
        <div id="container" class="Main_content">
          <%= yield %>
        </div><!-- container -->
      </div>
      <div class="right_box">
        <div id="page_title" class="heading_messages">COLLEGE QUEST</div>
      </div>
      <div class="clear"></div>
    </div>
    <div id="waiting" class="waiting"><img src="/images/ajax-loader.gif"></div>
  </div><!-- wrapper -->
</div><!-- body_bg -->
<input type="hidden" name="hdn_profile_id" id="hdn_profile_id" value="<%=user_session[:profile_id] %>"/>
</body>
