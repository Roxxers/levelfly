  $("#head").attr("src", "/assets/wardrobe/"+_avatar.head+".png");
  $("#earrings").attr("src", "/assets/wardrobe/"+_avatar.earrings+".png");
  $("#facial_marks").attr("src", "/assets/wardrobe/"+_avatar.facial_marks+".png");
  $("#facial_hair").attr("src", "/assets/wardrobe/"+_avatar.facial_hair+".png");
  $("#makeup").attr("src", "/assets/wardrobe/"+_avatar.makeup+".png");
  $("#glasses").attr("src", "/assets/wardrobe/"+_avatar.glasses+".png");
  $("#hair").attr("src", "/assets/wardrobe/"+_avatar.hair+".png");
  $("#hat").attr("src", "/assets/wardrobe/"+_avatar.hat+".png");
