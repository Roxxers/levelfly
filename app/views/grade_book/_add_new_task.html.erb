<div class ="add_new_task" id ="add_new_task">
  <div>TASK<input type ="text" id ="new_task" value=""></div>
  <div>OUTCOMES</div>
  <% if !@outcomes_course.nil? %>
    <% @outcomes_course.each do |outcomes| %>
      <div id="task_outcomes_<%=outcomes.id%>" class="task_outcomes">
      <input type="checkbox" name="chk_outcomes[]" checked="true" id="<%=outcomes.id%>"  value="<%=outcomes.id%>" />
      &nbsp;&nbsp;&nbsp;<%= outcomes.name %><br/>
      </div>
    <% end %>  
  <% end %>
  <div>
    <input name="" type="button" value="DON'T ADD" class="" id="dont_add_btn" />
    <input name="" type="button" value="ADD" class="" id="add_btn" />
  </div>
</div>


