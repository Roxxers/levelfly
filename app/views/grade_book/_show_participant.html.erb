<div class="GB_course_box">

  <div class="spacebarGbook"></div>
  <div class="GBtable_wrapper">
    <div class="outcome_wp">
      <div class="Grade_left_panel_head"><div class="Grade_box ">GRADE</div></div>
      <div class="Grade_right_panel_head">
        <div class="selectbg2"> <span class="fakebox">OUTCOMES</span>
          <select id="outcome_id">
             <option value="1">OUTCOMES</option>
             <option value="2">Notes</option>
          </select>
        </div>
      </div>
    </div><!--outcome_wp-->

    <div class="Grade_left_panel">
      <table width="100%" border="0" cellpadding="0" cellspacing="0" class="GB_table GB_left_table" id="GB_left_table">

        <%if !@participant.nil?%>
        <% @participant.each do |p|%>
        <tr class="<%= cycle("GB_odd","")%>">
          <td width="63%" class="Name_box td_align"><%= p.full_name%></td><!-- td_align-->
          <td class="td_align"> 
            <div class="b_box"><input type="text" name="grade" id="<%=p.id%>" class="task_grade" value="" maxlength="1" readonly="readonly" size="5"/></div>
          </td>
        </tr>
        <%end%>
        <%end%>
      </table>
    </div><!--Grade_left_panel-->

    <div class="Grade_right_panel">

      <table width="100%" border="0" cellpadding="0" cellspacing="0" class="GB_table GB_right_table">
        <%if !@participant.nil?%>
          <% @participant.each_with_index do |p,i|%>
          <tr class="<%= cycle("Dark_no","light_row")%>">
            <%if !@outcomes.nil?%>
               <% @outcomes.each do |o|%>
                <td>
                  <div class="GB_outcomment rotate_text"><%if i == 0%><%=o.name%><%end%></div>
                </td>
                <td class="td_align"><input type="text" name="grade" id="p_<%=p.id%>_<%=o.id%>" class="grades" value="" maxlength="1" readonly="readonly" size="1"/></td>
              <%end%>
            <%end%>
          </tr>
          <%end%>
        <%end%>
   
      </table>
    </div><!--Grade_right_panel-->
  </div>
</div>

<div class="GB_course_box2">

  <div class="selectbg3" id="show_all_task">
    <%= render :partial => "/grade_book/show_task" %>
  </div>

  <div class="page_heading">TASK</div>
  <div class="clear"></div>
  <div class="spacebarGbook"></div>

  <div class="task_left_wp">
    <div class="task_left_heading">
      <div class="positn_rtlv"><div id="seting_box" style="display:none;" class="GBsttingbox"></div>
        <div class="GB_sttingbt"><img id="setting_icon" src="images/GB_setting_icon.png" /></div></div>
     
    </div><!--task_left_heading-->
    <div class="clear"></div>
    
  </div><!--task_left_wp-->

  <div class="task_right_wp"><!--Right side table-->

    <table width="100%" border="0" cellpadding="0" cellspacing="0" id="heading_task" class="heading_task">
      <tr class="task_right_heading">
        <% unless @tasks.nil? %>
          <% @tasks.each do |t| %> 
          <th><%= t.name %></th>
          <% end %>
        <% end %>
      </tr>
     <%if !@participant.nil?%>
       <% @participant.each_with_index do |p,i|%>
        <tr class="GB_row">
        <% unless @tasks.nil? %>
          <% @tasks.each do |t| %> 
          <td > 
            <table border="0" class="GB_table GB_editable task_grades_hieg">
              <tr <%if i%2 == 0%>class="GB_odd"<%end%>>
              <% @task_outcomes = t.outcomes%>
               <td <%if (i==0)%>class=""<%else%>class="td_align"<%end%>>
                 <input type="text" name="task_grade" id="g_<%=p.id%>_<%=t.id%>" rel = "<%=p.id%>" class="task_grade editable_field" value="" maxlength="4" size="1"/>
               </td>
               
                <% if !@task_outcomes.nil?%>
                  <% @task_outcomes.each_with_index do |o,j|%>
                   
                  <td class="<%if i%2==0%>Dark_no<%else%>light_row<%end%> width_30 ">
                    <div class="GB_outcomment2 rotate_text"><%if i == 0%><%=o.name%><%end%></div>
                  </td>
                  <td class="<%if i%2==0%>Dark_no<%else%>light_row<%end%> width_30 td_align">
                    <input type="text" name="task_point" id="p_<%=p.id%>_<%=o.id%>_<%=t.id%>" rel= "p_<%=p.id%>_<%=o.id%>"class="task_grade editable_field" value="" maxlength="1" size="2"/>
                  </td>
                  <%end%>
                <%end%>
              </tr>
            </table>
          </td>
        <% end %>
       <% end %>
       </tr>
      <% end %>
     <% end %> 
    </table>

  </div><!--task_left_heading-->

</div>
