<div class="screen_title">
  VIEW TASK
</div>
<div class="content_wrapper">
  <div class="menu_container">
    <ul>
      <li>
        <a href="javascript:void(0)" value="1" class="active">SUMMARY</a>
      </li>
      <li>
        <a href="javascript:void(0)" value="2" >AWARDS</a>
      </li>
      <li>
        <a href="javascript:void(0)" value="3" >RESOURCES</a>
      </li>
      <li>
        <a href="javascript:void(0)" value="4" >NOTIFICATION</a>
      </li>
      <li>
        <a href="javascript:void(0)" value="5" >PEOPLE</a>
      </li>
    </ul>
  </div>
  <div class="content_container">
    <form name="frm_task" id="frm_task" enctype="multipart/form-data">
      <div id="div_1" class="form_container">
        <div class="frm_label">
          Task
        </div>
        <div class="frm_input">
          <input type="text" name="task" id="task" class="large" value="<%=@task.name if @task %>" onblur='javascript:setStorage("task_name", $(this).val())'/>
        </div>
        <div class="frm_label">
          Description
        </div>
        <div class="frm_input">
          <textarea name="descr" id="descr" rows="10" onblur='javascript:setStorage("task_descr", $(this).val())'><%=@task.descr if @task %></textarea>
        </div>
        <div class="frm_label">
          Course
        </div>
        <div class="frm_input">
          <select name="course" id="course">
            <option value="">SELECT</option>
            <% @courses.each do |c| %>
            <option value="<%= c.id %>" <%=@task.course_id==c.id ? "Selected" : ""  if @task %>><%= c.name %></option>
            <% end %>
          </select>
          <div id="categories_container" class="hide" style="margin-top:10px;">
            
          </div>
        </div>
        <div class="frm_label">
          Due Date
        </div>
        <div class="frm_input">
          <input type="text" name="due_date" id="due_date" class="medium" value="<%=@task.due_date if @task %>"/>
        </div>
      </div>
      <div id="div_2" class="form_container hide">
        <div class="frm_label">
          Level
        </div>
        <div class="frm_input">
          <div class="level_radio">
            <input type="radio" name="level" id="level_easy" value="1" onClick='javascript:setStorage("task_level", $(this).val())' <%=@task.level==1 ? "checked" : ""  if @task %>/>
          </div>
          <div class="level_label">
            Easy
          </div>
          <div class="level_radio">
            <input type="radio" name="level" id="level_easy" value="2" onClick='javascript:setStorage("task_level", $(this).val())' <%=@task.level==2 ? "checked" : ""  if @task %>/>
          </div>
          <div class="level_label">
            Medium
          </div>
          <div class="level_radio">
            <input type="radio" name="level" id="level_easy" value="3"  onClick='javascript:setStorage("task_level", $(this).val())' <%=@task.level==3 ? "checked" : ""  if @task %>/>
          </div>
          <div class="level_label">
            Hard
          </div>
        </div>
        <div class="frm_label">
          Outcomes
        </div>
        <div class="frm_input" id="outcomes_container">
          <% if @outcomes %>
            <%= render :partial => "course_outcomes" %>
          <% end %>
        </div>
      </div>
      <div id="div_3" class="form_container hide">
        <div id="upload_container" style="width:600px;margin:auto;">
          <!-- input type="file" name="resources" id="resources" / -->
        </div>
      </div>
      <div id="div_4" class="form_container hide">
        <div class="frm_label">
          Email
        </div>
        <div class="frm_input">
          <input type="text" name="email" id="email" class="large" />
        </div>
        <div class="frm_label">
          Facebook Id
        </div>
        <div class="frm_input">
          <input type="text" name="facebook" id="facebook" class="large" />
        </div>
      </div>
      <div id="div_5" class="form_container hide">
        <div class="frm_label">
          Organizer
        </div>
        <div class="frm_input">
          <input type="text" name="organizer" id="organizer" value="<%=@profile.full_name%>" readonly="true" class="medium" onblur='javascript:setStorage("task_organizer", $(this).val())'/>
        </div>
        <div class="frm_label small_label">
          Participants
        </div>
        <div class="frm_input" id="participants_container">
          <% if @people %>
            <%= render :partial => "course_peoples" %>
          <% end %>
        </div>
      </div>
      <div class="frm_button">
        <input type="button" name="btn_task" id="btn_task" value="Save"/>
      </div>
      <input type="hidden" name="task_id" id="task_id_hdn" value="<%=@task.id if @task %>" />
      <input type="hidden" name="school_id" id="course_school_id_hdn" value="<%= @profile.school_id %>" />
    </form>
  </div>
  <div class="left_button hide" id="task_remove_bt_div">
    <input type="button" name="task_btn_remove" id="task_btn_remove" class="big_btn" value="Remove All"/>
  </div>
  <div class="left_button hide" id="task_remove_bt_outcome__div">
    <input type="button" name="task_btn_outcome_remove" id="task_btn_outcome_remove" class="big_btn" value="Remove All"/>
  </div>
</div>
