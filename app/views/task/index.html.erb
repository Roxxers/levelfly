<div class="wrapper">
  <div class="menu_container">
    <ul>
      <li>
        <a href="javascript:void(0)" value="1" class="active">SUMMARY</a>
      </li>
      <li>
        <a href="javascript:void(0)" value="2" >AWARDS</a>
      </li>
      <li>
        <a href="javascript:void(0)" value="3" >RESOURCES</a>
      </li>
      <li>
        <a href="javascript:void(0)" value="4" >NOTIFICATION</a>
      </li>
      <li>
        <a href="javascript:void(0)" value="5" >PEOPLE</a>
      </li>
    </ul>
  </div>
  <div class="content_container">
    <form name="frm_task" id="frm_task" enctype="multipart/form-data">
      <div id="div_1" class="form_container">
        <div class="frm_label">
          Task
        </div>
        <div class="frm_input">
          <input type="text" name="task" id="task" class="large" onblur='javascript:setStorage("task_name", $(this).val())'/>
        </div>
        <div class="frm_label">
          Description
        </div>
        <div class="frm_input">
          <textarea name="descr" id="descr" rows="10" onblur='javascript:setStorage("task_descr", $(this).val())'></textarea>
        </div>
        <div class="frm_label">
          Due Date
        </div>
        <div class="frm_input">
          <input type="text" name="due_date" id="due_date" class="medium" />
        </div>
      </div>
      <div id="div_2" class="form_container hide">
        <div class="frm_label">
          Points
        </div>
        <div class="frm_input">
          <input type="text" name="points" id="points" class="small" onblur='javascript:setStorage("task_points", $(this).val())'/>
        </div>
        <div class="frm_label">
          Outcomes
        </div>
        <div class="frm_input" id="outcome_container">
          <input type="text" name="outcomes[]" id="outcomes_1" rel="percentage_1" class="medium" onblur='javascript:setStorage("task_outcomes_1", $(this).val())'/> &nbsp;&nbsp;
          <input type="text" name="percentage[]" id="percentage_1" rel="outcomes_1" class="small" onblur="javascript:setPercentages($(this));"/>
        </div>
      </div>
      <div id="div_3" class="form_container hide">
        <div id="upload_container" style="width:600px;margin:auto;">
          <!-- input type="file" name="resources" id="resources" / -->
        </div>
      </div>
      <div id="div_4" class="form_container hide">
        <div class="frm_label">
          Email
        </div>
        <div class="frm_input">
          <input type="text" name="email" id="email" class="large" />
        </div>
        <div class="frm_label">
          Facebook Id
        </div>
        <div class="frm_input">
          <input type="text" name="facebook" id="facebook" class="large" />
        </div>
      </div>
      <div id="div_5" class="form_container hide">
        <div class="frm_label">
          Organizer
        </div>
        <div class="frm_input">
          <input type="text" name="organizer" id="organizer" class="medium" onblur='javascript:setStorage("task_organizer", $(this).val())'/>
        </div>
        <div class="frm_label small_label">
          Participants
        </div>
        <div class="frm_input" id="participants_container">
          <input type="checkbox" name="chk_participants[]" id="chk_participants_1" />
          <input type="text" name="participants[]" id="participants_1" class="medium" />
        </div>
      </div>
      <div class="frm_button">
        <input type="button" name="btn_task" id="btn_task" value="Save"/>
      </div>
      <input type="hidden" name="task_id" id="task_id_hdn" value="" />
    </form>
  </div>
</div>
