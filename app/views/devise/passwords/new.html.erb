<div class="Main_Wp">
<div class="Header_Wp">
 <div class="Logo_Wp">
  <!-- <img src="images/icon_dropbox.png"/> -->
</div><!--Logo_Wp-->
  </div><!--Header_Wp-->
  <div class="Content_Wp">
    <div class="Panel_Left">
       <img src="/images/login_splash.png" class="Panel_Left_img"/>
      <div class="left_content_box">	
        <h1 style="color:white;">Game your learning.</h1>
          <div class="clear"></div>
	        <span class="blue">Version <%= APP_VERSION %></span>
           <div class="clear"></div>
            <div class="Divider_15"></div>
      </div><!--left_content_box-->
    </div><!--Panel_Left-->
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
   <div class="Panel_Rirght">
		<div>
			<img src="/images/levelfly_tag.png" alt="Levelfly" width="400" height="124"><br>
			<h3 style="color:white;margin-top:0px;"><%= session[:slug].blank? ? "" : school.name %></h3></div>
		<div class="Divider_90"></div>
    <div class="Sign_in_wp">
      <div class="sign_in_box"><h1>Forgot your password</h1></div><!--sign_in-box-->
      <div class="creat_text">
      <span class="blue">
      </span></div>
      </div>
      <div class="clear"></div>
      <div class="Divider_15"></div>
      <div class="clear"></div>
       
      <div class="text_box_wp">
           <%= f.email_field :email, :class=>"txt_box",:style=>"width:378px;", :placeholder=>"Email" %>
      </div><!--text_box_wp-->
      <div class="Divider_15"></div>
      <div class="clear"></div>
      <div class="remember_box_wp">
           <div class="sign_in_button_wp">
                <%= f.submit "Send Me", :class=>"big_bluebtn" %>
              </div><!--sign_in_button-->
              <div class="forgot_your_pass_wp">
                <%= render :partial => "devise/shared/links" %>
              </div><!--forgot_your_pass_wp-->
      </div><!--remember_box_wp-->
      <% flash.each do |name, msg| %>
		   <div class="error_message"><h2><%= msg %></h2></div>
      <% end %> 
     </div><!--Panel_Right-->
     <% end %>
  </div><!--Content_Wp-->
 <div class="clear"></div>
</div><!--Main_Wp-->
