  <div id="copyright">(c) Copyright <%= Time.now.strftime("%Y") %> Levelfly Learning LLC. All rights reserved.</div> -->
</div>

<script type="text/javascript">
	$(function() {
		$('.Main_Wp').css('min-height', $('html').height());
		$('#feature_splash').show();
	});

	var ie11 = !!navigator.userAgent.match(/Trident\/7\./);
	if ( ie11 ) {
		$('#popup_warning').show();
	} else if ( $.browser.msie ) {
		if( parseInt($.browser.version, 10) < 10 ) {
			$('#signin_frm').remove();
			$('#browser_warning').show();
		}else if( parseInt($.browser.version) > 9 ) {
			$('#popup_warning').show();
		}
	} else if ( $.browser.mozilla ) {
		if( parseInt($.browser.version) < 10 ) {
			$('#signin_frm').remove();
			$('#browser_warning').show();
		}
	}

	$("#hide_pop_up").click(function(){
		$("#popup_warning").hide();
	});

	$('#learn_more').click(function() {
		var height = $('html').height();
		var interval = setInterval(function() {
			if ($(document).scrollTop() >= height) {
				clearInterval(interval);
			} else {
				$(document).scrollTop($(document).scrollTop() + 50);
			}
		}, 10);

		return false;
	});
</script>
